{
    "name": "lra-experiment",
    "model_config": {
        "hf_model_name_or_path": "prajjwal1/bert-tiny",
        "vocab_size_or_config_json_file": 32,
        "hidden_size": 2,
        "num_hidden_layers": 1,
        "num_attention_heads": 1,
        "hidden_dropout_prob": 0.05,
        "max_position_embeddings": 2000,
        "num_labels": 10
    },
    "data": {
        "training": {
            "inputs": "input/train.src",
            "masks": "input/train.mask",
            "labels": "label/train.label"
        },
        "validation": {
            "inputs": "input/valid.src",
            "masks": "input/valid.mask",
            "labels": "label/valid.label"
        },
        "test": {
            "inputs": "input/test.src",
            "masks": "input/test.mask",
            "labels": "label/test.label"
        }
    },
    "training": {
        "num_epochs": 1600,
        "lr_schedule": "constant",
        "lr_offset": 0.0,
        "lr_scheduler_params": {
            "warmup_ratio": 0.1,
            "warmup_degree": 1,
            "degree": 0,
            "one_cycle_steps": 75000
        },
        "learning_rate": 1e-3,
        "weight_decay": 0.1,
        "num_workers": 4,
        "async_worker": true
    }
}