{
    "name": "lra-experiment",
    "model_config": {
        "hf_model_name_or_path": "bert-base-uncased",
        "vocab_size_or_config_json_file": 264,
        "hidden_size": 12,
        "num_hidden_layers": 2,
        "num_attention_heads": 1,
        "hidden_dropout_prob": 0.0,
        "max_position_embeddings": 1024
    },
    "data": {
        "training": {
            "inputs": "input/train.src",
            "labels": "label/train.label"
        },
        "validation": {
            "inputs": "input/valid.src",
            "labels": "label/valid.label"
        },
        "test": {
            "inputs": "input/test.src",
            "labels": "label/test.label"
        }
    },
    "training": {
        "num_epochs": 210,
        "lr_scheduler_params": {
            "warmup_ratio": 0.1,
            "warmup_degree": 1,
            "degree": 0,
            "one_cycle_steps": 1000000
        },
        "lr_schedule": "cosine",
        "lr_offset": 0.0,
        "learning_rate": 1e-3,
        "weight_decay": 0.0,
        "num_workers": 4
    }
}