{
    "name": "lra-experiment",
    "model_config": {
        "vocab_size_or_config_json_file": 32,
        "hidden_size": 512,
        "num_hidden_layers": 9,
        "num_attention_heads": 8,
        "intermediate_size": 2,
        "hidden_act": "gelu",
        "hidden_dropout_prob": 0.1,
        "attention_probs_dropout_prob": 0.05,
        "embedding_dropout": 0.05,
        "max_position_embeddings": 2000,
        "type_vocab_size": 2,
        "initializer_range": 0.2,
        "pooler_function": "first",
        "pooler_no_dense": true,
        "pos_emb_type": "relpe",
        "relpe_type": "cosine",
        "local_attention": true,
        "window_size": 20
    },
    "data": {
        "training": {
            "inputs": "input/train.src",
            "masks": "input/train.mask",
            "labels": "label/train.label"
        },
        "validation": {
            "inputs": "input/valid.src",
            "masks": "input/valid.mask",
            "labels": "label/valid.label"
        },
        "test": {
            "inputs": "input/test.src",
            "masks": "input/test.mask",
            "labels": "label/test.label"
        }
    },
    "training": {
        "num_epochs": 105,
        "lr_scheduler_params": {
            "warmup_ratio": 0.1,
            "warmup_degree": 1,
            "degree": 0,
            "one_cycle_steps": 75000
        },
        "lr_schedule": "cosine",
        "lr_offset": 0.0,
        "learning_rate": 1e-3,
        "weight_decay": 0.1,
        "num_workers": 4,
        "async_worker": true
    }
}
