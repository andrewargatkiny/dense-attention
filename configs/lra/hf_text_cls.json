{
    "name": "hf-text-classification",
    "model_config": {
        "hf_model_name_or_path": "bert-base-uncased",
        "max_position_embeddings": 24,
        "hidden_dropout_prob": 0.1,
        "num_labels": 2,
        "hidden_size": 12,
        "vocab_size_or_config_json_file": 264
    },
    "data": {
        "training": {
            "inputs": "input/train.src",
            "masks": "input/train.mask",
            "labels": "label/train.label"
        },
        "validation": {
            "inputs": "input/test.src",
            "masks": "input/test.mask",
            "labels": "label/test.label"
        },
        "test": {
            "inputs": "input/test.src",
            "masks": "input/test.mask",
            "labels": "label/test.label"
        }
    },
    "training": {
        "num_epochs": 65,
        "lr_scheduler_params": {
            "warmup_ratio": 0.1,
            "warmup_degree": 1,
            "degree": 0,
            "one_cycle_steps": 12800
        },
        "lr_schedule": "cosine",
        "lr_offset": 0.0,
        "learning_rate": 2e-3,
        "weight_decay": 0.1,
        "num_workers": 4,
        "async_worker": true
    }
}